escape F1
definekey root e select emacs
definekey root KP_Left exchangeleft
definekey root KP_Right exchangeright
definekey root KP_Up exchangeup
definekey root KP_Down exchangedown
definekey top C-F1 focus
definekey top M-F1 next
# leave F2 for cycling windows within Emacs
definekey top F3 focus
definekey top F4 nextscreen
addhook key banish
set fgcolor green
set bgcolor black
