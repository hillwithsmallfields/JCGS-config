#!/bin/bash

# to get the definition of CONFIG:
. $HOME/.bash_profile

for FILE in bash_profile ratpoisonrc emacs crontab signature xinitrc
do
  TARGET=~/.$FILE
  if [ -f $TARGET ]
  then
    cp $TARGET ${TARGET}-old
  fi
  cp $CONFIG/$FILE $TARGET
done

cat > $HOME/tmp-sudoers <<SUDOEOF
# /etc/sudoers
#
# See the man page for details on how to write a sudoers file.
#

Defaults	env_reset
Defaults	timestamp_timeout=90

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root	ALL=(ALL) ALL
$USER ALL=(ALL) ALL
SUDOEOF

echo As root, do: cp $HOME/tmp-sudoers /etc/sudoers

if [ ! -f /usr/share/xessions/ratpoison.desktop ]
then
  echo As root, do: cp $CONFIG/ratpoison.desktop /usr/share/xessions
fi
